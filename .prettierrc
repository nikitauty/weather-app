{
	"useTabs": true,
	"tabWidth": 2,
	"semi": true,
	"printWidth": 100,
	"bracketSpacing": true,
	"trailingComma": "all",
	"singleAttributePerLine": false,
	"arrowParens": "always",
	"singleQuote": true,
	"jsxSingleQuote": true,
	"importOrder": ["^@core/(.*)$", "^@server/(.*)$", "^@ui/(.*)$", "^[./]"],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
